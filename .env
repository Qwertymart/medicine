APP_NAME=CTG_Monitor
APP_VERSION=1.0.0
APP_ENV=development

GRPC_PORT=50051
HTTP_PORT=8080
LOG_LEVEL=info

# Database Configuration
DB_HOST=localhost              # Для локальной разработки
DB_PORT=5432
DB_USER=ctg_user
DB_PASSWORD=ctd_password       # Исправлена опечатка (было ctd_password)
DB_NAME=ctg_monitor
DB_SSLMODE=disable
DB_TIMEZONE=Europe/Moscow

# MQTT Configuration
MQTT_BROKER=tcp://localhost:1883    # Для локальной разработки
MQTT_HOST=localhost                 # Альтернативная переменная
MQTT_PORT=1883
MQTT_CLIENT_ID=ctg_monitor_service
MQTT_USERNAME=ctg_mqtt_user
MQTT_PASSWORD=ctg_mqtt_password
MQTT_QOS=1

# Buffer Configuration
BUFFER_SIZE=100
BUFFER_FLUSH_INTERVAL=10
MAX_BUFFER_SIZE=1000

# Monitoring
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30s

# Docker overrides (используются в docker-compose.yml)
# DB_HOST=postgres               # Автоматически переопределяется в Docker
# MQTT_BROKER=tcp://mosquitto:1883  # Автоматически переопределяется в Docker