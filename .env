APP_NAME=CTG_Monitor
APP_VERSION=1.0.0
APP_ENV=development

GRPC_PORT=50051
HTTP_PORT=8080
LOG_LEVEL=info

DB_HOST=postgres
DB_PORT=5432
DB_USER=ctg_user
DB_PASSWORD=ctd_password
DB_NAME=ctg_monitor
DB_SSLMODE=disable
DB_TIMEZONE=Europe/Moscow

# For local development (override DB_HOST)
# DB_HOST=localhost

# MQTT Configuration
MQTT_BROKER=tcp://host.docker.internal:1883
MQTT_CLIENT_ID=ctg_monitor_service
MQTT_USERNAME=ctg_mqtt_user
MQTT_PASSWORD=ctg_mqtt_password
MQTT_QOS=1

BUFFER_SIZE=100
BUFFER_FLUSH_INTERVAL=10
MAX_BUFFER_SIZE=1000

METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30s
